{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "esnext",
    "newLine": "LF",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "outDir": "dist/types",
    "module": "esnext",
    "types": ["vitest/globals"],
    "verbatimModuleSyntax": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
